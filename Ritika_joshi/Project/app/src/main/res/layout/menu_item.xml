<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        app:cardElevation="4dp">
    <ScrollView android:layout_width="wrap_content"
                android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RelativeLayout01"
    >

        <ImageView
                android:id="@+id/menu_image"
                android:background="@drawable/images"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:scaleType="centerCrop"
        />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/menu_name"
                android:background="@color/colorPrimary"
                android:text="Name Of Menu"
                android:textColor="@color/fbutton_color_wet_asphalt"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_alignParentBottom="true"


        />




        <ImageView
                android:id="@+id/menu_image2"
                android:background="@drawable/images2"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:scaleType="centerCrop"
                android:layout_below="@+id/menu_image"
        />



        <ImageView
                android:id="@+id/menu_image3"
                android:background="@drawable/images3"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:scaleType="centerCrop"
                android:layout_below="@+id/menu_image2"



        />

        <ImageView
                android:id="@+id/menu_image4"
                android:background="@drawable/images7"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:scaleType="centerCrop"
                android:layout_below="@+id/menu_image3"


        />

    </RelativeLayout>

    </ScrollView>

</android.support.v7.widget.CardView>